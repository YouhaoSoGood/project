<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/style.css">
    <title>login</title>
</head>


<body>
    <div class="wrap-login">
        <div class="background-video-login">
            <video autoplay muted loop playsinline>
                <source src="https://i.imgur.com/T1Sj9hR.mp4" type="video/mp4" />
            </video>
        </div>
        <form action="/login" method="post" class="login">
            <div class="login-item">
                <input type="text" name="account" id="account" required placeholder>
                <label for="account">帳號</label>
            </div>
            <div class="login-item">
                <input type="password" name="password" id="password" required placeholder>
                <label for="password">密碼</label>
            </div>
            <div class="login-item">
                <button>登入</button>
            </div>
            <div class="login-google">
                <a href="/auth/google">
                    <img src="https://img.icons8.com/color/16/000000/google-logo.png" />
                    Login With Google
                </a>
            </div>

        </form>

        <form action="/auth/login" method="POST">

            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                    placeholder="Enter email" name="username" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                    else.</small>
            </div>
            <br />
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"
                    name="password" />
            </div>
            <br />
            <button class="btn btn-primary">Submit</button>

        </form>

        <div class="prompt">
            <p class="prompt-title">錯誤提示</p>
            <p id="msg"></p>
            <a class="prompt-sumbit" href="/login">確認</a>
        </div>




    </div>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const sec = urlParams.get("success");
        const msg = urlParams.get("msg");

        if (sec === "false") {
            document.getElementById("msg").textContent = msg;
            document.querySelector(".prompt").style.display = "flex";
        }
    </script>

</body>

</html>